{
  "name": "@levicape/model-greathall-qureau",
  "version": "0.0.0-local.0",
  "config": {
    "packagemanager": "pnpm",
    "packageexecutor": "pnpm exec",
    "lintpaths": "./src",
    "outpaths": "./module"
  },
  "dependencies": {
    "@levicape/spork": "catalog:",
    "@types/node": "catalog:types",
    "typescript": "catalog:dev",
    "zod": "catalog:core"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:lint",
    "publint": "catalog:package"
  },
  "nx": {
    "targets": {
      "dx:precommit": {
        "dependsOn": [
          "dx:prepublish"
        ]
      },
      "nx:compile": {
        "dependsOn": [
          "build:tsc"
        ]
      }
    }
  },
  "private": true,
  "scripts": {
    "build": "$npm_package_config_packageexecutor nx nx:compile",
    "build:tsc": "$npm_package_config_packageexecutor tsc",
    "clean": "rm -rf $npm_package_config_outpaths || true",
    "dx:lint": "$npm_package_config_packagemanager run build && $npm_package_config_packagemanager run lint && $npm_package_config_packagemanager run package:format",
    "dx:precommit": "$npm_package_config_packageexecutor nx dx:precommit:pre && $npm_package_config_packageexecutor nx package:deps",
    "dx:precommit:pre": "echo \"Starting precommit dx. This will check package.json dependencies.\"",
    "dx:prepublish": "$npm_package_config_packageexecutor nx dx:prepublish:pre && $npm_package_config_packageexecutor nx dx:lint && $npm_package_config_packageexecutor nx prepublish",
    "dx:prepublish:pre": "echo \"Starting prepublish dx. This will run dx:lint and format package.json and verify all exports are valid. \"",
    "lint": "$npm_package_config_packageexecutor biome check $npm_package_config_lintpaths",
    "lint:format": "$npm_package_config_packageexecutor biome format --write $npm_package_config_lintpaths",
    "lint:unsafe": "$npm_package_config_packageexecutor biome check --write --unsafe $npm_package_config_lintpaths",
    "lint:write": "$npm_package_config_packageexecutor biome check --write $npm_package_config_lintpaths",
    "package:deps": "$npm_package_config_packageexecutor depcheck",
    "package:fix": "$npm_package_config_packageexecutor syncpack fix-mismatches",
    "package:format": "$npm_package_config_packageexecutor syncpack format",
    "package:lockfile": "$npm_package_config_packagemanager install --lockfile-only --lockfile-dir .",
    "package:update": "$npm_package_config_packageexecutor syncpack update",
    "prebuild": "$npm_package_config_packagemanager run clean",
    "precommit": "$npm_package_config_packageexecutor nx dx:prepublish --no-cloud --verbose",
    "predx:lint": "$npm_package_config_packageexecutor nx clean",
    "prelint": "$npm_package_config_packageexecutor biome format $npm_package_config_lintpaths",
    "prepublish": "$npm_package_config_packageexecutor nx exec -- publint --strict"
  },
  "type": "module"
}
